<%= semantic_form_for [@reminder] do |f| %>
  <% if @reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reminder.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @reminder.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :programs do |builder| %>
    <% render 'programSelector', :p => builder %>
  <% end %>

  <%= f.fields_for :reports do |builder| %>
  <div class="field">
    <div class="control-group">
      <label class="control-label" for="reportName">Choose a report for the message</label>
      <div class="controls">
        <%= collection_select :reminder, :report_id, @reports, :id, :humanname %>
      </div>
      <span class="help-inline">
      </span>
    </div>
  </div>
  <% end %>

  <%= f.fields_for :messages do |builder| %>
  <div class="field" id="<%= :messagetext %>">
    <div class="control-group">
        <%= builder.label :messagetext, "Reminder message text", :class => 'control-label' %>
        <div class="controls">
          <%= builder.text_area :messagetext, :rows=>5 %>
        </div>
    </div>
  </div>
  <% end %>

  <div class="actions">
    <%= f.actions do %>
    <%= f.action :submit, :class=>'btn btn-primary' %>
    <%= end %>
  </div>
<% end %>
